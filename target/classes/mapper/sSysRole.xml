<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cms.modules.mapper.dao.SSysRoleDao">

    <resultMap id="BaseResultMap" type="com.cms.modules.mapper.model.po.SSysRolePO">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="name" property="name" jdbcType="VARCHAR"/>
		<result column="state" property="state" jdbcType="INTEGER"/>
		<result column="description" property="description" jdbcType="VARCHAR"/>
		<result column="createtime" property="createtime" jdbcType="TIMESTAMP"/>
		<result column="menu_ids" property="menuIds" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO s_sys_role(id,name,state,description,createtime,menu_ids)
        VALUES(null,#{name},#{state},#{description},#{createtime},#{menuIds})
    </insert>
    <insert id="batchInsert" parameterType="list">
        INSERT INTO s_sys_role(id,name,state,description,createtime,menu_ids)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (null,#{item.name},#{item.state},#{item.description},#{item.createtime},#{item.menuIds})
        </foreach>
        ON DUPLICATE KEY UPDATE
        id=VALUES(id),name=VALUES(name),state=VALUES(state),description=VALUES(description),createtime=VALUES(createtime),menu_ids=VALUES(menu_ids)
    </insert>
    <update id="update">
        UPDATE s_sys_role
        <trim prefix="SET" suffixOverrides=",">
			<if test="name!=null">
                name=#{name},
            </if>
			<if test="state!=null">
                state=#{state},
            </if>
			<if test="description!=null">
                description=#{description},
            </if>
			<if test="menuIds!=null">
                menu_ids=#{menuIds},
            </if>
        </trim>
        WHERE id=#{id}
    </update>

    <sql id="SELECT_FIELD">
        id,name,state,description,createtime,menu_ids
    </sql>

    <sql id="QUERY_SQL">
        from s_sys_role
        <where>
			<if test="id!=null and id!=-1">
               AND id=#{id}
            </if>
			<if test="name!=null">
               AND name=#{name}
            </if>
			<if test="state!=null and state!=-1">
               AND state=#{state}
            </if>
			<if test="description!=null">
               AND description=#{description}
            </if>
			<if test="createtime!=null">
               AND createtime=#{createtime}
            </if>
			<if test="menuIds!=null">
               AND menu_ids=#{menuIds}
            </if>

        </where>
    </sql>

    <select id="query" resultMap="BaseResultMap">
        select <include refid="SELECT_FIELD"/>
        <include refid="QUERY_SQL"/>
        <if test="limit!=null and limit!=-1 ">
            <if test="offset!=null and offset!=-1">
                limit #{offset},#{limit}
            </if>
        </if>
    </select>

    <select id="count" resultType="long">
        select count(*)
        <include refid="QUERY_SQL"/>
    </select>

</mapper>